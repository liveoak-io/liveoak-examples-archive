{
  html-app: '/app/index.html',
  resources: {
    app: {
      type: 'filesystem',
      config: {
        directory: '${application.dir}/app'
      }
    },

    client: {
      type: 'aggregating-filesystem',
      config: {
        directory: "${io.liveoak.js.dir}"
      }
    },

    auth: {
      type: 'keycloak'
    },

    authz: {
      type: 'security'
    },

    uri-policy: {
      type: 'uri-policy',
      config: {
        "rules": [
          {
            "uriPattern": "/auth",
            "requestTypes": [ "READ" ],
            "allowedUsers": [ "*" ]
          },
          {
            "uriPattern": "/auth/app/index.html",
            "requestTypes": [ "READ" ],
            "allowedUsers": [ "*" ]
          },
          {
            "uriPattern": "/auth/client*",
            "requestTypes": [ "*" ],
            "allowedUsers": [ "*" ]
          },
          {
            "uriPattern": "/auth/storage*",
            "requestTypes": [ "READ" ],
            "allowedRoles": [ "auth/user" ]
          }
        ]
      }
    },

    storage: {
      type: 'mongo',
      config: {
        db: 'liveoak',
        servers: [
          {
            host: 'localhost',
            port: 27017
          }
        ]
      }
    }

  }
}
