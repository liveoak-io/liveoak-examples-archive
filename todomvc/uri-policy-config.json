{ 
    "uriRules": [
        {
            "priority": 2,
            "uriPattern": "*",
            "requestType": "*",
            "allowedRoles": "'test-app/admin'"
        },
        {
            "priority": 1,
            "uriPattern": "/todomvc/app*",
            "requestType": "READ",
            "allowedUsers": "'*'"
        },
        {
            "priority": 1,
            "uriPattern": "/todomvc/client/(.*)[.]js",
            "requestType": "READ",
            "allowedUsers": "'*'"
        },
        {
            "priority": 1,
            "uriPattern": "/todomvc/storage*",
            "requestType": "READ",
            "queryParamsCondition": "parseJson($q).get('user') == $securityContext.subject",
            "allowedRoles": "'test-app/user'"
        },
        {
            "priority": 1,
            "uriPattern": "/todomvc/storage*",
            "requestType": "CREATE",
            "queryParamsCondition": "$requestState.getProperty('user') ==  $securityContext.subject",
            "allowedRoles": "'test-app/user'"
        },
        {
            "priority": 1,
            "uriPattern": "/todomvc/storage*",
            "requestType": "UPDATE",
            "queryParamsCondition": "$requestState.getProperty('user') !=  $securityContext.subject",
            "deniedUsers": "'*'"
        }
    ]
}
